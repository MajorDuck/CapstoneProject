@model IEnumerable<Capstone.Models.AspNetRoles>

@{
    ViewData["Title"] = "Index";
}

<h1>ASPNet Roles</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Role">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Role">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Role">Delete</a>
                </td>
            </tr>
        }
     </tbody>
</table>
