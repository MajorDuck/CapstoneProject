@model IEnumerable<Capstone.Models.DocumentType>

@{
    ViewData["Title"] = "Index";
}

<h1>Document Types</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DocumentTypeName)
            </th>
            <th>Tools</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DocumentTypeName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DocumentTypeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DocumentTypeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DocumentTypeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
