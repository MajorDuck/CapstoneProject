@model CapstoneProject.ViewModels.AspNetUserRolesViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User Role Pairs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditConfirmed">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" asp-for="@Model.userRole" />
            <div class="form-group">
                <label asp-for="userRole.UserId" class="control-label"></label>
                <select asp-for="userRole.UserId"
                        asp-items="@Model.Users"
                        class="form-control">
                    <option disabled selected hidden>Select User by Email</option>
                </select>
                <span asp-validation-for="userRole.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userRole.RoleId" class="control-label"></label>
                <select asp-for="userRole.RoleId"
                        asp-items="@Model.Roles"
                        class="form-control">
                    <option disabled selected hidden>Select LLC</option>
                </select>
                <span asp-validation-for="userRole.RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
